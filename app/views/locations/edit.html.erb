<% provide(:title, "Edit Location - ") %>
<h1>Edit <%= @location.name %> location</h1>
<p class="lead">Edit the location below, example format 001.01.100</p>
<div class="form">
    <%= form_for @location, url: location_path(@location), method: :put do |f| %>
        <%= render 'shared/collection_error_messages', collection: @location %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', id: 'location', placeholder: 'e.g. 001.01.100' %>
        </div>
        <%= f.submit class: 'btn btn-primary btn-primary--wide' %>
    <% end %>
</div>