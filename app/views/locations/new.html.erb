<% provide(:title, "New Location - ") %>
<h1>Create a new location</h1>
<p class="lead">Enter the name for a new location, example format 001.01.100</p>
<div class="form">
    <%= form_for @location do |f| %>
        <%= render 'shared/collection_error_messages', collection: @location %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', id: 'location', placeholder: 'e.g. 001.01.100' %>
        </div>
        <%= f.submit class: 'btn btn-primary btn-primary--wide' %>
    <% end %>
</div>