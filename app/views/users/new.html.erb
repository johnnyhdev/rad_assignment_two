<% provide(:title, "Registration - ") %>
<div class="container">
  <h1>Register</h1>
  <p class="lead">Fill out the following fields below to register as a coordinator.</p>
  <div class="form">
    <%= form_for :course, url: courses_path do |f| %>
      <div class="form-group">
        <%= f.label :name, for: 'inputName' %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name', id: 'inputName' %>
      </div>
      <div class="form-group">
        <%= f.label :email, for: 'inputEmail' %>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email', id: 'inputEmail' %>
      </div>
      <div class="form-group">
        <%= f.label :email, for: 'inputEmail' %>
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email', id: 'inputEmail' %>
      </div>
      <div class="form-group">
        <%= check_box_tag :category %>
        <%= label_tag :category, "Web Development" %>
        <%= check_box_tag :category %>
        <%= label_tag :category, "Java" %>
      </div>
      <%= f.submit class: 'btn btn-default' %>
    <% end %>
  </div>
</div>